<Window x:Class="GibddApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Логин:"/>
            <TextBox Name="txtUsername" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10" Width="200"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox Name="txtPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10" Width="200"/>

            <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnLogin_Click"/>
        </StackPanel>
        <Frame Name="MainFrame" />
    </Grid>
</Window>